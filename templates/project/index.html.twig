{% extends 'base.html.twig' %}
{% trans_default_domain 'projects' %}

{% block title %}{{ 'projects.title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>{{ 'projects.title'|trans }}</h1>
                <a href="{{ path('project_create') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>{{ 'projects.new_project'|trans }}
                </a>
            </div>

            {% if projects is empty %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    {{ 'projects.no_projects'|trans }} 
                    <a href="{{ path('project_create') }}" class="alert-link">{{ 'projects.create_first_project'|trans }}</a>.
                </div>
            {% else %}
                <div class="row">
                    {% for project in projects %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ project.name }}</h5>
                                    {% if project.description %}
                                        <p class="card-text text-muted">{{ project.description|length > 100 ? project.description|slice(0, 100) ~ '...' : project.description }}</p>
                                    {% endif %}
                                    <div class="mb-3">
                                        <small class="text-muted">
                                            <i class="bi bi-people me-1"></i>
                                            {{ 'projects.members_count'|trans({'count': project.users|length}) }}
                                        </small>
                                        <br>
                                        <small class="text-muted">
                                            <i class="bi bi-collection me-1"></i>
                                            {{ 'projects.finds_count'|trans({'count': project.foundsImages|length}) }}
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between">
                                        <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye me-1"></i>{{ 'projects.view'|trans }}
                                        </a>
                                        <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-pencil me-1"></i>{{ 'projects.edit_project'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
