{% extends 'base.html.twig' %}

{% block title %}Changelog{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Changelog</h1>
        
        {% for date, dayCommits in commits %}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">{{ date }}</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        {% for commit in dayCommits %}
                            <div class="commit-item mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="commit-time text-muted" style="width: 60px;">
                                        {{ commit.date|date('H:i') }}
                                    </div>
                                    <div class="commit-badge bg-primary text-white rounded px-2 py-1 me-2" style="font-family: monospace;">
                                        {{ commit.hash }}
                                    </div>
                                    <div class="commit-message flex-grow-1">
                                        {{ commit.message }}
                                    </div>
                                    <div class="commit-author text-muted">
                                        {{ commit.author }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <style>
        .timeline {
            position: relative;
        }
        
        .commit-item {
            position: relative;
            padding-left: 0;
        }
        
        .commit-badge {
            font-size: 0.8em;
        }
        
        .commit-message {
            font-size: 1em;
        }
        
        .commit-author {
            font-size: 0.9em;
        }
        
        .commit-time {
            font-size: 0.9em;
        }
    </style>
{% endblock %} 