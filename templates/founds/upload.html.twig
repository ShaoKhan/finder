{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">
                <h1 class="mb-2">Upload Photo</h1>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message|raw }}
                    </div>
                {% endfor %}
                <p></p>
            </div>
        </div>
        {{ form_start(form) }}
        <div  class="row">

            <div class="col-6">
                {{ form_row(form.files) }}
            </div>
            <div class="col-6">
                {{ form_row(form.name) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12 mt-2">
                {{ form_row(form.note) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12 mt-2">
                {{ form_row(form.isPublic) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
