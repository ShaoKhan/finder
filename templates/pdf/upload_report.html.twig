        <td style="width: 25%;" colspan="3"></td>
    </tr>
    <tr>
        <td style="width: 33%">
            <strong>
                Flurname/<br/>
                Flur/Flurstück/<br/>
                Straße/HausNr.:
            </strong>
        </td>
        <td colspan="5">{{ image.nearestStreet }}</td>
    </tr>
    <tr>
        <td style="width: 16%"><strong>Koordinaten-<br/>Bezugssystem</strong></td>
        <td style="width: 16%">UTM33<br/>EPSG:25833</td>
        <td style="width: 16%">Rechts:</td>
        <td style="width: 16%">
            {% if image.longitude %}
                {{ image.utmY }}<br/>
                ({{ image.longitude }})
            {% else %}
                N/A
            {% endif %}
        </td>
        <td style="width: 16%">bis:</td>
        <td style="width: 16%">
            {% if image.latitude %}
                {{ image.utmX }}<br/>
                ({{ image.latitude }})
            {% else %}
                N/A
            {% endif %}
